<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ActiveTen.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ActiveTen"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="Blue"
    Shell.TitleColor="White"
    Title="ActiveTen">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="MENU" HeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>
    
    <ShellContent
        Title="Workout Tutorial"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
         Title="Progress Tracking"
         ContentTemplate="{DataTemplate local:ProgressTracking}"
         Route="ProgressTracking" />

    <ShellContent
         Title="Record"
         ContentTemplate="{DataTemplate local:Record}"
         Route="Record" />

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:About}"
        Route="About" />

    <Shell.FlyoutFooter>
        <VerticalStackLayout>
            <Label Text="ActiveTen" HeightRequest="50" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutFooter>


</Shell>
