<?xml version="1.0" encoding="utf-8" ?>
<Frame  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        BorderColor="Black"
        Padding="20"
        x:Name="this"
        x:Class="ActiveTen.CustomControls.DropDownButton">
    
    <Grid RowDefinitions="Auto" ColumnDefinitions="*, 20">
        <Label x:Name="lblDropDown" Text="Select Workout Plans" Grid.Row="0" Grid.Column="0" />
        <ActivityIndicator Grid.Row="0" Grid.Column="1" HeightRequest="20" WidthRequest="20"
                           IsVisible="{Binding Source={x:Reference this}, Path=IsLoading}"
                           IsRunning="True" />
    </Grid>

    <Frame.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
    </Frame.GestureRecognizers>
    
</Frame>
